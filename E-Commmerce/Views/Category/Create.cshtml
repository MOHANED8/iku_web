@model CategoryViewModel
<!-- Specifies that the view expects a CategoryViewModel object -->
@{
    ViewBag.Title = "Create Category"; // Sets the page title to "Create Category"
}

<!-- Form for creating a new category -->
<form method="post" asp-action="Create">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Create Category</h3> <!-- Card header displaying the title -->
        </div>
        <div class="card-body">

            <!-- Input field for category name -->
            <div class="form-group">
                <label asp-for="Name" class="control-label mb-2"></label> <!-- Label for Name -->
                <input asp-for="Name" class="form-control" /> <!-- Input field for Name -->
                <span asp-validation-for="Name" class="text-danger"></span> <!-- Validation message for Name -->
            </div>

            <!-- Textarea for category description -->
            <div class="form-group">
                <label asp-for="Description" class="control-label mb-2"></label> <!-- Label for Description -->
                <textarea asp-for="Description" class="form-control"></textarea> <!-- Textarea for Description -->
                <span asp-validation-for="Description" class="text-danger"></span> <!-- Validation message for Description -->
            </div>

            <!-- Submit button -->
            <div class="mt-2">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </div>
</form>

<!-- Back to List button -->
<div class="mt-0">
    <a asp-action="Index" asp-route-PageNumber="@ViewBag.TotalPages" class="page-link text-center text-black font-monospace">Back to List</a>
</div>

@section Scripts {
    <!-- Include client-side validation scripts -->
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
